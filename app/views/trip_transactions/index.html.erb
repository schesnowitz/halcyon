<p id="notice"><%= notice %></p>

<h1>Pick Drops</h1>

<table>
  <thead>
    <tr>
      <th>Address</th>
      <th>Pick up</th>
      <th>Drop off</th>
      <th>Order</th>
      <th>Trip</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trip_transactions.each do |trip_transaction| %>
      <tr>
        <td><%= trip_transaction.address %></td>
        <td><%= trip_transaction.pick_up %></td>
        <td><%= trip_transaction.drop_off %></td>
        <td><%= trip_transaction.order %></td>
        <td><%= trip_transaction.trip %></td>
        <td><%= link_to 'Show', trip_transaction %></td>
        <td><%= link_to 'Edit', edit_trip_transaction_path(trip_transaction) %></td>
        <td><%= link_to 'Destroy', trip_transaction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pick Drop', new_trip_transaction_path %>
