
<%= simple_form_for [@driver, driver_statement,] do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
  <%= f.collection_select :driver_id, Driver.order(:last_name),:id,:driver_full_name, include_blank: true %> 

    <%= f.input :due_date %>
    <%= f.input :paid %>
  </div>

<%= simple_form_for :trip_to_statement do |t| %>
<%= t.input :add_to_statement %>
<% end %>
<table class="table table-striped">
  <thead>
    <tr>
    <th scope="col">Trip</th>
      <th scope="col">Distance</th>
      <th scope="col">Gross</th>
      <th scope="col">Driver</th>
  
    </tr>
  </thead>
<% @completed_trips.each do |ct| %>
  <tbody>

    
    
    <tr>
    
      <th><%= link_to ct.id, trip_path(ct) %></th>
      <th><%= ct.distance %></th>
      <td><%= number_to_currency(ct.amount) %></td> 
    
      <td></td>
    </tr>


  </tbody>
  <% end %>
</table>





 

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>




