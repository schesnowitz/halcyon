
<%= simple_form_for [@driver, driver_statement] do |f| %>


  <div class="form-inputs">
  <% f.collection_select :driver_id, Driver.order(:last_name),:id,:driver_full_name, include_blank: true %> 

    <%= f.input :due_date %>
    <% if controller_name == 'driver_statements' && action_name == 'edit' %>
    <%= f.input :paid %>
    <% end %>
    <%= f.collection_check_boxes(:trip_ids, @completed_trips, :id, :id) %>
  </div>
<table class="table table-striped">
  <thead>
    <tr>
    <th scope="col">Trip</th>
      <th scope="col">Distance</th>
      <th scope="col">Gross</th>
      <th scope="col">driver_statement?</th>
      <th scope="col">Customer</th>
    </tr>
  </thead>

  <tbody>

    <% @completed_trips.each do |trip| %>
    <tr>
      <th><%= link_to trip.id, trip_path(trip) %></th>
      <th><%= trip.distance %></th>
      <td><%= number_to_currency(trip.amount) %></td>
      <td>
      <%= trip.driver_statements.ids %>

      </td>
      <td>##</td>
    </tr>
    
<% end %>

  </tbody>
  
</table>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
