<p id="notice"><%= notice %></p>

<h1>Driver Statements</h1>

<table>
  <thead>
    <tr>
      <th>Driver</th>
      <th>Due date</th>
      <th>Paid</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @driver_statements.each do |driver_statement| %>
      <tr>
        <td><%= driver_statement.driver.driver_full_name %></td>
        <td><%= driver_statement.due_date %></td>
        <td><%= driver_statement.paid %></td>
        <td><%= link_to 'Show', driver_driver_statement_path(driver_statement.driver, driver_statement)  %></td>
        <td><%= link_to 'Edit', edit_driver_driver_statement_path(driver_statement.driver, driver_statement) %></td>
        <td><%= link_to 'Destroy', [@driver, driver_statement], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Driver Statement', new_driver_driver_statement_path(@driver) %>
