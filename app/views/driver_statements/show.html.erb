<p id="notice"><%= notice %></p>

<p>
  <strong>Driver:</strong>
  <%= @driver_statement.driver.driver_full_name %>
</p>

<p>
  <strong>Due date:</strong>
  <%= @driver_statement.due_date %>
</p>

<p>
  <strong>Paid:</strong>
  <%= @driver_statement.paid %>
</p>
<table class="table table-striped">
  <thead>
    <tr>
    <th scope="col">Trip</th>
      <th scope="col">Distance</th>
      <th scope="col">Gross</th>
      <th scope="col">Driver</th>
      <th scope="col">Customer</th>
    </tr>
  </thead>

  <tbody>

    <% @driver_statement.trips.each do |trip| %>
    <tr>
      <th><%= link_to trip.id, trip_path(trip) %></th>
      <th><%= trip.distance %></th>
      <td><%= number_to_currency(trip.amount) %></td>
      <td>##</td>
      <td>##</td>
    </tr>
<% end %>

  </tbody>
  
</table>
<%= link_to 'Edit', edit_driver_driver_statement_path(@driver_statement) %> |
<%= link_to 'Back', driver_driver_statements_path %>


